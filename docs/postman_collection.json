{
  "info": {
    "name": "Skill Swap Marketplace API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"] },
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Alex Student\",\n  \"email\": \"alex@student.edu\",\n  \"password\": \"password123\"\n}" }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"alex@student.edu\",\n  \"password\": \"password123\"\n}" }
      }
    },
    {
      "name": "Search Users",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{baseUrl}}/users/search?page=1&limit=10", "host": ["{{baseUrl}}"], "path": ["users", "search"], "query": [{"key":"page","value":"1"},{"key":"limit","value":"10"}] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ]
}
